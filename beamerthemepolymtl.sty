\ProvidesPackage{beamerthemepolymtl}[2011/04/20]
\RequirePackage{tikz}


\mode<presentation>

\ProcessOptionsBeamer

\useinnertheme{circles}
\useoutertheme{miniframes}

\usecolortheme{polymtl}

\setbeamertemplate{navigation symbols}{}

% TITLE PAGE
\defbeamertemplate*{title page}{titlepage}
{
  \thispagestyle{empty}
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.15\paperheight,leftskip=1em,sep=0.4em]{headerline title}
    \begin{minipage}[c]{0.9\linewidth}
    \begin{minipage}{0.25\linewidth}
      \centering
      \includegraphics[width=50px]{images/polymtl-logo.pdf}
    \end{minipage}
    \hfill
    \hspace{5em}
    \begin{minipage}{0.7\linewidth}
      \centering

    \end{minipage}
    \end{minipage}
  \end{beamercolorbox}
  \nointerlineskip
  \begin{beamercolorbox}[wd=1\paperwidth,ht=0.85\paperheight,center]{titlepage}
    \begin{beamercolorbox}[wd=0.95\paperwidth,ht=0.8\paperheight,leftskip=1em,sep=0.4em]{titlepage main}
      \centering
      \begin{minipage}[c]{0.7\paperwidth}
        \centering
        \inserttitle\par
        \ifx\insertsubtitle\@empty\relax
        \else\vspace{1em}\small\insertsubtitle
      \vspace{30px}
      \end{minipage}
      
      \begin{minipage}[c]{0.5\paperwidth}
        \centering
         \insertauthor\par 
         \vspace{10px}
          \small\insertinstitute\par
          \vspace{10px}
          \small\insertdate\par
          \vspace{50px}
      \end{minipage}
    \end{beamercolorbox}
  \vspace{13px}
  \end{beamercolorbox}
}



% HEADER
\defbeamertemplate*{headline}{polymtl}%
{
  \begin{beamercolorbox}[wd=\paperwidth,leftskip=1em,sep=0.6em]{headerline title}
    \begin{minipage}{0.7\linewidth}
        {\tiny{\bfseries POLYTECHNIQUE} MONTR\'EAL}%
    \end{minipage}
    \hspace{0px}
    \begin{minipage}{0.3\linewidth}
      \begin{flushright}
        \insertsectionnavigationhorizontal{.3\paperwidth}{}{}
      \end{flushright}
    \end{minipage}
  \end{beamercolorbox}
  \begin{beamercolorbox}[wd=\paperwidth,sep=1px]{headerline border}
    \vspace{1px}
  \end{beamercolorbox}
}

% FOOTER
\defbeamertemplate*{footline}{polymtl}
{
%\leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth,leftskip=1em,sep=0.2em]{footerline}
    \insertshorttitle\;--\;\insertauthor \hfill \insertframenumber/\inserttotalframenumber\;--\;{\bfseries www.polymtl.ca}
  \end{beamercolorbox}  
}


% SECTION LIST
\usesectionheadtemplate
{ %active
  \color{polymtlred} \insertsectionhead
}
{ %other
  \color{polymtllightgrey} \insertsectionhead
}

% BACKGROUND IMAGE
\setbeamertemplate{background}{
  \ifnum\insertframenumber=1\else
  \parbox[r][\paperheight]{\paperwidth}{
    \vfill\hfill
    \includegraphics[width=80px]{images/polymtl-watermark.pdf}
  }
  \fi
}


\defbeamertemplate*{frametitle}{}
{
  \begin{beamercolorbox}[sep=0ex,ht= 2.5ex, wd=\paperwidth]{}
    \hspace{2ex}\insertframetitle{} \hspace{1ex}\hrulefill %
  \end{beamercolorbox}%
}

